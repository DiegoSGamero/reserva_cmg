<div class="container container-home d-flex p-4">
  <div class="col-3"></div>
  <div class="col-6 m-3 text-center main-box">
    <div class="home-title">
      <h1> Faça sua reserva aqui! <h1>
    </div>
    <div class="reserve-container">
        <div class="reservation-form">
          <%= simple_form_for @reservation, url: reservations_path do |f| %>
          <div>
            <%= f.input :reserve_name, label: "Nome da Reserva" %>
          </div>

          <div>
            <%= f.input :date_only, as: :date, label: "Data" %>
          </div>

          <div>
            <%= f.input :time_only, as: :time, label: "Horário" %>
          </div>

          <div>
            <%= f.input :reservation_type, collection: Reservation.reservation_types.keys, label: "Tipo de Reserva" %>
          </div>

          <div>
            <%= f.input :details, label: "Detalhes" %>
          </div>

          <%= f.button :submit, "Reservar" %>
        <% end %>
      </div>
    </div>
    <!-- Verifica o parâmetro `success` para exibir o pop-up -->
    <% if params[:success] == 'true' %>
      <div class="confirmation-popup">
        Reserva realizada com sucesso!
        <button onclick="window.location='/'">OK</button>
      </div>
    <% elsif params[:success] == 'false' %>
      <div class="error-popup">
        Erro ao criar reserva. Tente novamente.
      </div>
    <% end %>
  </div>
  <div class="col-3"></div>
</div>
